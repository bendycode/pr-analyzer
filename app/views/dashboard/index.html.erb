<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Repositories Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Repositories</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_repositories %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-code-branch fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pull Requests Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Pull Requests</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_prs %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-code-merge fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Time to Review Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Avg Time to Review (Hours)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @avg_time_to_review %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clock fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Time to Merge Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Avg Time to Merge (Hours)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @avg_time_to_merge %></div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Content Row -->
<div class="row">

    <!-- Weekly Trends Chart -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Weekly PR Trends</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="weeklyTrendsChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Repository Performance Pie Chart -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Repository Activity</h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="repositoryActivityChart"></canvas>
                </div>
                <div class="mt-4 text-center small">
                    <span class="mr-2">
                        <i class="fas fa-circle text-primary"></i> Active Repos
                    </span>
                    <span class="mr-2">
                        <i class="fas fa-circle text-success"></i> With Recent Activity
                    </span>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Content Row -->
<div class="row">

    <!-- Recent Repositories -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Repositories</h6>
            </div>
            <div class="card-body">
                <% @repositories.each do |repo| %>
                    <div class="d-flex align-items-center mb-3">
                        <div class="mr-3">
                            <div class="icon-circle bg-primary">
                                <i class="fas fa-code-branch text-white"></i>
                            </div>
                        </div>
                        <div class="font-weight-bold">
                            <%= link_to repo.name, repository_path(repo), class: "text-decoration-none" %>
                            <div class="small text-gray-500">
                                Last sync: <%= repo.last_fetched_at&.strftime("%b %d, %Y") || "Never" %>
                            </div>
                        </div>
                    </div>
                <% end %>
                
                <% if @repositories.empty? %>
                    <div class="text-center py-4">
                        <i class="fas fa-code-branch fa-3x text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No repositories configured yet.</p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <!-- Recent Week Activity -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recent Week Activity</h6>
            </div>
            <div class="card-body">
                <% @latest_weeks.each do |week| %>
                    <div class="d-flex align-items-center mb-3">
                        <div class="mr-3">
                            <div class="icon-circle bg-success">
                                <i class="fas fa-calendar text-white"></i>
                            </div>
                        </div>
                        <div class="font-weight-bold">
                            <%= link_to "Week #{week.week_number}", repository_week_path(week.repository, week), 
                                class: "text-decoration-none" %>
                            <div class="small text-gray-500">
                                <%= week.repository.name %> - <%= week.begin_date.strftime("%b %d") %> to <%= week.end_date.strftime("%b %d") %>
                            </div>
                        </div>
                    </div>
                <% end %>
                
                <% if @latest_weeks.empty? %>
                    <div class="text-center py-4">
                        <i class="fas fa-calendar fa-3x text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No week data available yet.</p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Weekly Trends Chart
    var ctx = document.getElementById('weeklyTrendsChart').getContext('2d');
    var weeklyTrendsChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [<%= @latest_weeks.reverse.map { |w| "'Week #{w.week_number}'" }.join(', ').html_safe %>],
            datasets: [{
                label: 'PRs Started',
                data: [<%= @latest_weeks.reverse.map(&:prs_started_count).join(', ') %>],
                borderColor: '#4e73df',
                backgroundColor: 'rgba(78, 115, 223, 0.1)',
                borderWidth: 2,
                fill: true
            }, {
                label: 'PRs Merged',
                data: [<%= @latest_weeks.reverse.map(&:prs_merged_count).join(', ') %>],
                borderColor: '#1cc88a',
                backgroundColor: 'rgba(28, 200, 138, 0.1)',
                borderWidth: 2,
                fill: true
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Repository Activity Pie Chart
    var ctx2 = document.getElementById('repositoryActivityChart').getContext('2d');
    var repositoryActivityChart = new Chart(ctx2, {
        type: 'doughnut',
        data: {
            labels: [<%= @repositories.map { |r| "'#{r.name}'" }.join(', ').html_safe %>],
            datasets: [{
                data: [<%= @repositories.map { |r| r.pull_requests.count }.join(', ') %>],
                backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796'],
                hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf', '#f4b619', '#e02d1b', '#5a5c69'],
                hoverBorderColor: "rgba(234, 236, 244, 1)",
            }],
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        padding: 15
                    }
                }
            }
        }
    });
});
</script>